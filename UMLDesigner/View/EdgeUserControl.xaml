<UserControl x:Class="UMLDesigner.View.EdgeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Line Stroke="#2E8DEF" StrokeThickness="1" X1="{Binding NVMEndA.CanvasCenterX}" Y1="{Binding NVMEndA.CanvasCenterY}" X2="{Binding NVMEndB.CanvasCenterX}" Y2="{Binding NVMEndB.CanvasCenterY}"/>
        <!--<Path Stroke="#2E8DEF" StrokeThickness="1" Data="{Binding Path}"/>-->
        <Polyline Points="{Binding Arrow}" Fill="Transparent" Stroke="#2E8DEF" StrokeThickness="1"/>
    </Grid>
</UserControl>
